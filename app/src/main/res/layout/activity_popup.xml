<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="450dp"
        android:layout_height="950dp"
        android:clipToOutline="true"

        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute">

        <ImageView
            android:id="@+id/back_edit"
            android:layout_width="427dp"
            android:layout_height="907dp"
            app:srcCompat="@drawable/back_popup" />

        <ImageButton
            android:id="@+id/edit_close"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="208dp"
            android:backgroundTint="#00FFFFFF"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit_close" />

        <ImageView
            android:id="@+id/alarm_main"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="255dp"
            app:srcCompat="@drawable/alarm_main" />

        <TextView
            android:id="@+id/alram_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="303dp"
            android:fontFamily="@font/manrope_bold"
            android:text="알림 설정"
            android:textColor="#3F3F3F"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alram_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="333dp"
            android:fontFamily="@font/manrope_m"
            android:text="옷차림 추천 알림 시간을 설정해주세요!"
            android:textColor="#3F3F3F" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="244dp"
            android:layout_height="98dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="378dp"
            app:srcCompat="@drawable/alarm_box" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="139dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="506dp"
            android:backgroundTint="#00FFFFFF"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/alarm_off" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>