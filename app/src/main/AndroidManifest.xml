<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/puretation_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/puretation_appicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PureStation"
        tools:targetApi="31">
        <activity
            android:name=".SetActivity"
            android:exported="false" />
        <activity
            android:name=".BottomActivity"
            android:exported="false" />
        <activity
            android:name=".TopActivity"
            android:exported="false" />
        <activity
            android:name=".OuterActivity"
            android:exported="false" />
        <activity
            android:name=".ClothSuggestions"
            android:exported="false" />

        <service
            android:name=".TimerService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync" />

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AllClosetActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".DetailActivty"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ModifyActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".PopupActivity"
            android:theme="@style/DialogTheme" />
    </application>

</manifest>